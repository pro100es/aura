# =============================================================================
# Aura Backend - Environment Variables
# Copy to .env and fill with your values. Never commit .env to Git!
# =============================================================================

# Supabase (required)
# Get from: Supabase Dashboard → Project Settings → API
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Replicate AI (required for image generation)
# Get from: https://replicate.com/account/api-tokens
REPLICATE_API_TOKEN=r8_xxxxxxxxxxxxxxxxxxxx

# Webhooks (required for Replicate callbacks)
# Generate: openssl rand -hex 32
WEBHOOK_SECRET=your-secure-random-string-min-32-chars

# Rate Limiting - Upstash Redis (optional)
# Get from: https://upstash.com/
UPSTASH_REDIS_URL=
UPSTASH_REDIS_TOKEN=

# Error Tracking - Sentry (optional)
# Get from: https://sentry.io/
SENTRY_DSN=

# Server
PORT=3000
# Base URL for webhooks (e.g. https://xxx.ngrok.io or https://api.aura-app.ai)
API_URL=
